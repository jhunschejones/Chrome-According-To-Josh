{
  "manifest_version": 3,
  "name": "WaniKani Images",
  "version": "1.0.0",
  "description": "Add images to WaniKani notes by parsing markdown image syntax",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "192": "icons/android-chrome-192x192.png",
    "512": "icons/android-chrome-512x512.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png"
    },
    "default_title": "Reparse WaniKani Images"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://wanikani.com/*", "*://www.wanikani.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}

