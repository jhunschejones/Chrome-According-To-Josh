{
  "name": "GH Icons",
  "description": "Change the Chrome tab icons for specific GitHub pages",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [{
    "js": ["content-script.js"],
    "matches": [
      "https://github.com/*"
    ]
  }],
  "host_permissions": [
    "https://github.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/images/notifications-icon.png",
        "/images/issues-icon.png",
        "/images/career-journal-icon.png",
        "/images/projects-icon.png"
      ],
      "matches": [ "https://github.com/*" ]
    }
  ],
  "icons": {
    "16": "/images/icon-16x16.png",
    "32": "/images/icon-32x32.png",
    "48": "/images/icon-192x192.png",
    "128": "/images/icon-512x512.png"
  }
}
