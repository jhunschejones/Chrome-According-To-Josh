#!/bin/bash

# ./bin/run explanation
#
# Required state: NONE
#
# Output state: NONE
#
# This script coordinates running the other scripts in the directory in order to:
#   1) export jpdb.io reviews
#   2) parse out leech cards from review data
#   3) invalidate session token used in the script

./bin/download-jpdb-reviews
./bin/parse-jpdb-reviews
./bin/jpdb-logout
# open the extensions tab to remind the user to refresh the extension
open -a "Google Chrome" chrome://extensions/

# clean up tmp files
rm ./tmp/*.json
