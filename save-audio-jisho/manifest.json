{
  "name": "Save Audio Jisho",
  "description": "Bringing a little more HTML to the world of JavaScript audio files, this time on jisho.org.",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [{
    "js": ["content-script.js"],
    "css": ["tooltip.css"],
    "matches": ["https://jisho.org/*"]
  }],
  "host_permissions": [
    "https://jisho.org/*"
  ],
  "icons": {
    "16": "/images/icon-16x16.png",
    "32": "/images/icon-32x32.png",
    "48": "/images/icon-192x192.png",
    "128": "/images/icon-512x512.png"
  }
}
