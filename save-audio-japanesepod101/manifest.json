{
  "name": "Save Audio JapanesePod101",
  "description": "Bringing a little HTML to the world of JavaScript audio files on japanesepod101.com.",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [{
    "js": ["content-script.js"],
    "matches": [
      "https://www.japanesepod101.com/japanese-dictionary/*",
      "https://www.japanesepod101.com/japanese-word-lists/*"
    ]
  }],
  "host_permissions": [
    "https://www.japanesepod101.com/japanese-dictionary/*",
    "https://www.japanesepod101.com/japanese-word-lists/*"
  ],
  "icons": {
    "16": "/images/icon-16x16.png",
    "32": "/images/icon-32x32.png",
    "48": "/images/icon-192x192.png",
    "128": "/images/icon-512x512.png"
  }
}
